<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:minHeight="120dp"
    android:layout_height="120dp">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="45dp"
                android:src="@drawable/ic_front_bus"
                android:layout_marginTop="40dp"
                android:layout_alignParentTop="true"
                android:id="@+id/imageView5"
                android:layout_weight="1"/>

            <TextView
                android:text="TextView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/notificacao_carreira"
                android:layout_marginTop="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:ellipsize="end"
                android:maxLength="10"
                android:textAlignment="center" />





            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_marginLeft="135dp"
                android:layout_marginTop="40dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_bus_stop"/>

            <TextView
                android:text="TextView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/notificacao_paragem"
                android:layout_marginTop="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="120dp"
                android:textAlignment="center" />




            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_timer_black_24dp"

                android:layout_marginLeft="215dp"
                android:layout_marginTop="40dp"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:text="TextView"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/notificacao_tempo"
                android:layout_marginTop="70dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="205dp"
                android:textAlignment="center" />



    <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_name"
                android:id="@+id/notificacao_apagar"
                android:layout_alignParentEnd="true"/>

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:id="@+id/switch_notificacao" />




</RelativeLayout>